<?xml version="1.0" encoding="us-ascii"?>
<application xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:xsd="http://www.w3.org/2001/XMLSchema" id="${artifactId}">
 <jobTemplates>
    <jobTemplate id="bt-proc">
      <streamingExecutable>/application/bt-proc/run.R</streamingExecutable>
      <defaultParameters>
        <parameter id="catalogue">http://catalogue.terradue.int/catalogue/search/LANDSAT_8/rdf</parameter>
          <parameter id="startdate" title="Start date" abstract="Start date of the TOI. Used as queryable for the MERIS Level 1 catalogue" scope="runtime" type="opensearch" target="time:start">2013-12-18T09:35:28</parameter>
          <parameter id="enddate" title="End date" abstract="End date of the TOI. Used as queryable for the MERIS Level 1 catalogue" scope="runtime" type="opensearch" target="time:end">2014-01-11T09:36:00</parameter>
          <parameter id="bbox" title="Bounding box" abstract="Bounding box expressed as minx,miny,maxx,maxy for catalogue query" scope="runtime" type="opensearch" target="geo:box">14.98,37.74,15.00,37.76</parameter>
          <parameter id="extent" title="AOI extent" abstract="AOI extent expressed as minx,miny,maxx,maxy in UTM coordinates" scope="runtime">479599,4158632,519599,4198632</parameter>
      </defaultParameters>
      <defaultJobconf>
          <property id="mapred.task.timeout">600000000</property>
          <property id="ciop.job.max.tasks">1</property>
      </defaultJobconf>
    </jobTemplate>
  </jobTemplates>
  <workflow id="myworkflow" title="My workflow" abstract="RGB or Gray image (Descending or Ascending orbit)">
    <workflowVersion>1.0</workflowVersion>
    <node id="n-bt-proc">
      <job id="bt-proc"/>
      <sources>
        <source refid="cas:series">http://catalogue.terradue.int/catalogue/search/LANDSAT_8/rdf</source>
      </sources>
      <parameters>
        <!--<parameter id="param1">value3</parameter>-->
      </parameters>
    </node>
  </workflow>
</application>
